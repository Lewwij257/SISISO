<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolutionActivity">

    <TextView
        android:id="@+id/text_solution_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/solution_is"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/text_solution_array"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center|start"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_x"
        app:layout_constraintTop_toBottomOf="@+id/text_solution_is">
    </TextView>

    <TextView
        android:id="@+id/text_solution"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center|start"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_f"
        app:layout_constraintTop_toBottomOf="@+id/text_solution_array">

    </TextView>

    <TextView
        android:id="@+id/text_x"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="X ="
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_solution_is" />

    <TextView
        android:id="@+id/text_f"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="F ="
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_x" />

    <TextView
        android:id="@+id/text_special"
        android:textSize="20sp"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/warning_unsolvable_problem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>